<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
	<id>io.github.equinoxhq.equinox</id>

	<name>Equinox</name>
	<summary>An open source runtime for Roblox on Linux</summary>
	
	<metadata_license>CC0-1.0</metadata_license>
	<project_license>MIT</project_license>
	<developer_name>EquinoxHQ</developer_name>
	

  	<launchable type="desktop-id">equinox.desktop</launchable>
	<url type="homepage">https://equinoxhq.github.io</url>
	<url type="bugtracker">https://github.com/equinoxhq/equinox/issues</url>
	<url type="help">https://github.com/equinoxhq/equinox</url>
	<url type="contact">https://discord.gg/Z5m3n9fjcU</url>

	<supports>
		<control>pointing</control>
		<control>keyboard</control>
		<control>touch</control>
		<control>tablet</control>
	</supports>
	
	<description>
		<p>
		Equinox is a new open-source runtime for Roblox on Linux that uses containerization to run a full Android userspace on your system in order to run Roblox.
		You can think of it as an unofficial native port for Roblox to Linux, since Roblox won't do it themselves.
		</p>
	</description>
	
	<screenshots>
		<screenshot type="default">
			<image>https://raw.githubusercontent.com/equinoxhq/equinox/refs/heads/master/images/equinox002.jpg</image>
		</screenshot>
		<screenshot type="launcher">
			<image>https://raw.githubusercontent.com/equinoxhq/equinox/refs/heads/master/images/equinox004.jpg</image>
		</screenshot>
		<screenshot type="initializer">
			<image>https://raw.githubusercontent.com/equinoxhq/equinox/refs/heads/master/images/equinox003.jpg</image>
		</screenshot>
	</screenshots>

	<releases></releases>

